---
import Layout from '../../layouts/Layout.astro';

const posts = Object.values(await import.meta.glob('./*.md', { eager: true }));
---

<Layout title="Blog">
  <div>
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-xl font-bold">Blog Posts</h1>
      <a href="/rss.xml" class="text-xs text-blue-500 hover:underline" target="_blank" rel="noopener noreferrer">
        RSS Feed
      </a>
    </div>
    <div class="space-y-8">
      {posts.map((post) => (
        <div>
          <h2 class="text-lg mb-2">
            <a href={post.url} class="text-blue-500 hover:underline">
              {post.frontmatter.title}
            </a>
          </h2>
          <time class="text-gray-600 block mb-2 text-xs">
            {new Date(post.frontmatter.pubDate).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <p class="text-xs text-gray-800">{post.frontmatter.description}</p>
        </div>
      ))}
    </div>
  </div>
</Layout>
