---
import Layout from '../../layouts/Layout.astro';

const posts = await Astro.glob('./*.md');
---

<Layout title="Blog">
  <div>
    <h1 class="text-xl font-bold mb-8">Blog Posts</h1>
    <div class="space-y-8">
      {posts.map((post) => (
        <div>
          <h2 class="text-lg mb-2">
            <a href={post.url} class="text-blue-500 hover:underline">
              {post.frontmatter.title}
            </a>
          </h2>
          <time class="text-gray-600 block mb-2 text-xs">
            {new Date(post.frontmatter.pubDate).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <p class="text-xs text-gray-800">{post.frontmatter.description}</p>
        </div>
      ))}
    </div>
  </div>
</Layout>
