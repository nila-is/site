---
import Layout from '../layouts/Layout.astro';
import Testimonial from '../components/Testimonial.astro';
import LabeledListItem from '../components/LabeledListItem.astro';
import Section from '../components/Section.astro';
import Prose from '../components/Prose.astro';
import Button from '../components/Button.astro';
import ExternalLink from '../components/ExternalLink.astro';
import { Image } from 'astro:assets';
import headshot from '../assets/headshot.jpg';
import { SITE_CONFIG } from '../config/site';
import { testimonials } from '../data/testimonials';
import { services, engagementModels } from '../data/services';
---

<Layout title="Home">
  <h1 class="text-2xl font-bold mb-6">AI engineering that ships to production</h1>

  <Prose>
    <p>
      I'm {SITE_CONFIG.author.name}, and Nila is my independent consulting practice. I partner with technical leaders to ship production AI systems.
    </p>
    <p class="pt-2">
      <Button href="https://nila.fillout.com/t/mZZ8cxD4tNus" external>
        Have an idea? Reach out â†’
      </Button>
    </p>
  </Prose>

  <Section id="services" title="Services">
    <ul class="space-y-4 list-none pl-0">
      {services.map((service) => (
        <LabeledListItem 
          label={service.label}
          description={service.description}
        />
      ))}
    </ul>
  </Section>

  <Section id="engagement-models" title="Engagement Models">
    <ul class="space-y-4 list-none pl-0">
      {engagementModels.map((model) => (
        <LabeledListItem 
          label={model.label}
          description={model.description}
        />
      ))}
    </ul>
  </Section>

  <Section id="background" title="Background">
    <Prose>
      <p>
        I've partnered with companies in industries including enterprise SaaS,
        consumer social, healthcare, fintech, and crypto.
      </p>
      <p>
        Prior to consulting, I was an early engineer at two AI-driven companies
        that were acquired: <strong>Drift</strong> (conversational AI, acquired by Vista for $1.2B) 
        and <strong>Kensho</strong> (AI for financial services, acquired by S&P Global for $550M).
      </p>
    </Prose>
  </Section>

  <Section id="testimonials" title="Testimonials">
    <div class="space-y-6">
      {testimonials.map((testimonial) => (
        <Testimonial 
          quote={testimonial.quote}
          author={testimonial.author}
          role={testimonial.role}
          company={testimonial.company}
          url={testimonial.url}
          projectUrl={testimonial.projectUrl}
          projectLabel={testimonial.projectLabel}
          favicon={testimonial.favicon}
        />
      ))}
    </div>
  </Section>

  <Section id="about" title="About">
    <div class="flex flex-col">
      <Image 
        src={headshot} 
        alt="Professional headshot of Vignesh Mohankumar" 
        class="w-full sm:w-2/3 md:w-1/2 mb-6 rounded-lg"
        width={400}
        height={400}
      />
      <Prose>
        <p>
          I'm based in New York, NY. I grew up in New England and was born near Chennai, India. Nila means moon in my native language Tamil (my sister suggested the name).
        </p>
        <p>
          Find me on 
          <ExternalLink href={SITE_CONFIG.social.linkedin} class="hover:text-blue-600 transition-colors">LinkedIn</ExternalLink>,
          <ExternalLink href={SITE_CONFIG.social.twitter} class="hover:text-blue-600 transition-colors">X</ExternalLink>
          and my <ExternalLink href={SITE_CONFIG.social.personalBlog} class="hover:text-blue-600 transition-colors">personal blog</ExternalLink>.
        </p>
      </Prose>
    </div>
  </Section>
</Layout>
