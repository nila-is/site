---
import { Image } from 'astro:assets';
import logo from '../assets/logo.svg';
---
<header class="bg-background border-b border-border" role="banner">
  <nav class="max-w-2xl mx-auto px-6 py-8" aria-label="Main navigation">
    <div class="flex items-center justify-center text-foreground">
      <Image 
        src={logo} 
        alt="" 
        role="presentation" 
        class="w-8 h-8 mr-3 dark:invert transition-colors duration-300" 
      />
      <span class="font-sans font-bold text-2xl m-0 uppercase tracking-wider">Nila</span>
      <span class="ml-3 text-sm normal-case tracking-normal font-normal text-muted-foreground">by Vignesh Mohankumar</span>
    </div>
  </nav>
</header>
