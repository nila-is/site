---
import { Image } from 'astro:assets';
import logo from '../assets/logo.svg';
---
<header class="bg-white">
  <div class="max-w-2xl mx-auto px-4 py-6">
    <a href="/" class="flex items-center text-inherit hover:text-inherit no-underline hover:no-underline">
      <Image src={logo} alt="Nila Logo" class="w-5 h-5 mr-2.5" />
      <span class="font-sans font-medium text-lg m-0 uppercase tracking-widest">Nila</span>
    </a>
  </div>
</header>
