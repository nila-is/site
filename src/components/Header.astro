---
import { Image } from 'astro:assets';
import logo from '../assets/logo.svg';
---

<header>
  <div class="mx-auto max-w-2xl px-6 pb-8 pt-12">
    <a
      href="/"
      class="group inline-flex items-center gap-2.5 text-inherit no-underline hover:text-inherit hover:no-underline"
    >
      <Image
        src={logo}
        alt="Nila Logo"
        class="h-8 w-8 transition-transform group-hover:scale-105"
      />
      <span class="font-sans text-xl font-bold tracking-wide">NILA</span>
    </a>
  </div>
</header>
