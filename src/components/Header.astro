---
import { Image } from 'astro:assets';
import logo from '../assets/logo.svg';
---
<header class="bg-white border-b border-border" role="banner">
  <nav class="max-w-2xl mx-auto px-6 py-8" aria-label="Main navigation">
    <a href="/" class="flex items-center justify-center text-inherit hover:text-inherit no-underline hover:no-underline focus:outline-none focus:ring-2 focus:ring-primary-600 focus:ring-offset-2 rounded" aria-label="Nila by Vignesh Mohankumar - Home">
      <Image src={logo} alt="" role="presentation" class="w-8 h-8 mr-3" />
      <span class="font-sans font-bold text-2xl m-0 uppercase tracking-wider">Nila</span>
      <span class="ml-3 text-sm normal-case tracking-normal font-normal">by Vignesh Mohankumar</span>
    </a>
  </nav>
</header>
