---
interface Props {
  date: string | Date;
  class?: string;
}

const { date, class: className } = Astro.props;

const dateObj = typeof date === 'string' ? new Date(date) : date;
const formattedDate = dateObj.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<time datetime={typeof date === 'string' ? date : date.toISOString()} class={className}>
  {formattedDate}
</time>

