---
interface Props {
  quote: string;
  author: string;
  role: string;
  company: string;
  url: string;
  projectUrl?: string;
  projectLabel?: string;
}

const { quote, author, role, company, url, projectUrl, projectLabel } = Astro.props;
---

<figure>
  <blockquote>
    <p class="italic mb-2">&ldquo;{quote}&rdquo;</p>
  </blockquote>
  <figcaption class="font-bold">
    â€” {author}, {role} at <a href={url} class="text-blue-500 hover:text-blue-700" target="_blank" rel="noopener noreferrer">{company}</a>
    {projectUrl && projectLabel && (
      <span class="text-sm font-normal block mt-1">
        <a href={projectUrl} class="text-blue-500 hover:text-blue-700" target="_blank" rel="noopener noreferrer">{projectLabel}</a>
      </span>
    )}
  </figcaption>
</figure>