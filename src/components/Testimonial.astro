---
interface Props {
  quote: string;
  author: string;
  company: string;
  url?: string;
}

const { quote, author, company, url } = Astro.props;
---

<figure class="pl-4 border-l-2 border-gray-300 mb-8">
  <blockquote>
    <p class="italic mb-2">&ldquo;{quote}&rdquo;</p>
  </blockquote>
  <figcaption class="font-bold">
    â€” {author}
    {url ? (
      <span>, <a href={url} class="text-blue-500 hover:text-blue-700" target="_blank" rel="noopener noreferrer">{company}</a></span>
    ) : (
      <span>, {company}</span>
    )}
  </figcaption>
</figure>