---
interface Props {
  quote: string;
  author: string;
  role: string;
  company: string;
  url: string;
  favicon?: string;
}

const { quote, author, role, company, url, favicon } = Astro.props;
---

<figure>
  <blockquote>
    <p class="mb-2 italic">&ldquo;{quote}&rdquo;</p>
  </blockquote>
  <figcaption class="font-bold">
    â€” {author}, {role} at <a
      href={url}
      class="text-blue-500 hover:text-blue-700"
      target="_blank"
      rel="noopener noreferrer"
      >{company}{
        favicon && (
          <img
            src={favicon}
            alt=""
            class="ml-1 inline-block h-4 w-4 align-text-bottom"
            loading="lazy"
          />
        )
      }</a
    >
  </figcaption>
</figure>
