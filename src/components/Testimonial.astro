---
import ExternalLink from './ExternalLink.astro';

interface Props {
  quote: string;
  author: string;
  role: string;
  company: string;
  url: string;
  projectUrl?: string;
  projectLabel?: string;
  favicon?: string;
}

const { quote, author, role, company, url, projectUrl, projectLabel, favicon } = Astro.props;
---

<figure class="space-y-2 p-5 border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-sm transition-all duration-200">
  <blockquote>
    <p class="italic text-gray-600 leading-relaxed text-sm">&ldquo;{quote}&rdquo;</p>
  </blockquote>
  <figcaption class="text-xs text-gray-600">
    <span class="font-medium">{author}</span>, {role} at <ExternalLink href={url} class="inline-flex items-center gap-1 align-middle hover:text-blue-600 transition-colors">
      {favicon && <img src={favicon} alt={`${company} logo`} class="w-3.5 h-3.5 flex-shrink-0" />}
      <span>{company}</span>
    </ExternalLink>
    {projectUrl && projectLabel && (
      <span class="block mt-1">
        <ExternalLink href={projectUrl} class="hover:text-blue-600 transition-colors">{projectLabel} â†’</ExternalLink>
      </span>
    )}
  </figcaption>
</figure>