---
interface Props {
  href: string;
  variant?: 'primary' | 'secondary';
  class?: string;
  external?: boolean;
}

const { href, variant = 'primary', class: className = '', external = false } = Astro.props;

const baseStyles = "inline-block px-5 py-2.5 rounded-lg transition-all duration-200 font-medium shadow-sm hover:shadow-lg hover:-translate-y-0.5 !no-underline";

const variantStyles = {
  primary: "bg-blue-600 text-white hover:!text-white hover:bg-blue-500",
  secondary: "bg-gray-100 text-gray-900 hover:bg-gray-200"
};

const combinedClass = `${baseStyles} ${variantStyles[variant]} ${className}`;
---

{external ? (
  <a 
    href={href} 
    target="_blank" 
    rel="noopener noreferrer"
    class={combinedClass}
  >
    <slot />
  </a>
) : (
  <a href={href} class={combinedClass}>
    <slot />
  </a>
)}

