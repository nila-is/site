---
import FormattedDate from './FormattedDate.astro';

interface Props {
  title: string;
  url: string;
  pubDate: string;
  description: string;
}

const { title, url, pubDate, description } = Astro.props;
---

<article aria-labelledby={`post-title-${url?.replace(/\//g, '-')}`} class="focus-within:ring-2 focus-within:ring-primary focus-within:ring-offset-2 rounded-lg p-1 -m-1">
  <h2 id={`post-title-${url?.replace(/\//g, '-')}`} class="text-lg mb-2">
    <a href={url} class="hover:underline focus:underline">
      {title}
    </a>
  </h2>
  <FormattedDate date={pubDate} class="text-muted-foreground block mb-2 text-xs" />
  <p class="text-xs text-muted-foreground">{description}</p>
</article>

