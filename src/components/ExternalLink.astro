---
interface Props {
  href: string;
  class?: string;
}

const { href, class: className } = Astro.props;

const slotContent = await Astro.slots.render('default');
const plainTextLabel = slotContent.replace(/<[^>]*>/g, '').trim();
---

<a 
  href={href} 
  target="_blank" 
  rel="noopener noreferrer" 
  class={`text-current no-underline hover:underline ${className || ''}`}
  aria-label={`${plainTextLabel} (opens in new window)`}
><slot /><span class="sr-only"> (opens in new window)</span></a>

