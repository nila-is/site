---
interface Props {
  href: string;
  favicon?: string;
}

const { href, favicon } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="inline-flex items-center"
  ><slot />{
    favicon && <img src={favicon} alt="" class="ml-1 h-4 w-4" loading="lazy" />
  }</a
>
