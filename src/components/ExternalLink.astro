---
interface Props {
  href: string;
  favicon?: string;
}

const { href, favicon } = Astro.props;
---

<a href={href} target="_blank" rel="noopener noreferrer"
  ><slot />{
    favicon && (
      <img
        src={favicon}
        alt=""
        class="ml-1 inline-block h-4 w-4 align-text-bottom"
        loading="lazy"
      />
    )
  }</a
>
